<h1>Listing projects</h1>

<div class="row" style="padding:15px;">
	<div class="col-md-12">
    <%= button_to 'New Project', new_project_path, { :class=> 'btn btn-success', :method => 'get' } %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Name</th>
      <th>Description</th>
      <th>Objective</th>
      <th>Synopsis</th>
      <th>Background</th>
      <th>Comment</th>
      <th>Url</th>
      <th>Urldescription</th>
      <th>Coursenumber</th>
      <th>Coursedepartment</th>
      <th>Coursenotes</th>
      <th>Picture</th>
      <th>Originator</th>
      <th>Unit</th>
      <th>County</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_id %></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.objective %></td>
        <td><%= project.synopsis %></td>
        <td><%= project.background %></td>
        <td><%= project.comment %></td>
        <td><%= project.url %></td>
        <td><%= project.urldescription %></td>
        <td><%= project.coursenumber %></td>
        <td><%= project.coursedepartment %></td>
        <td><%= project.coursenotes %></td>
        <td><%= project.picture %></td>
        <td><%= project.originator_id %></td>
        <td><%= project.unit_id %></td>
        <td><%= project.county_id %></td>
        <td><%= project.zipcode_id %></td>
        <td><%= button_to 'Show', project, { :class=> 'btn btn-primary', :method => 'get' } %></td>
        <td><%= button_to 'Edit', edit_project_path(project), { :class=> 'btn btn-default', :method => 'get' } %></td>
        <td><%= button_to 'Destroy', project, :class=> 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
