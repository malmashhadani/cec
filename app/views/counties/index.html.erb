<h1>Listing counties</h1>

<div class="row" style="padding:15px;">
	<div class="col-md-12">
    <%= button_to 'New County', new_county_path, { :class=> 'btn btn-success', :method => 'get' } %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>County</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counties.each do |county| %>
      <tr>
        <td><%= county.county_id %></td>
        <td><%= county.name %></td>
        <td><%= button_to 'Show', county, { :class=> 'btn btn-primary', :method => 'get' } %></td>
        <td><%= button_to 'Edit', edit_county_path(county), { :class=> 'btn btn-default', :method => 'get' } %></td>
        <td><%= button_to 'Destroy', county, :class=> 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
