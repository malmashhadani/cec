<h1>Listing dots</h1>

<div class="row" style="padding:15px;">
	<div class="col-md-12">
    <%= button_to 'New Dot', new_dot_path, { :class=> 'btn btn-success', :method => 'get' } %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dots.each do |dot| %>
      <tr>
        <td><%= button_to 'Show', dot, { :class=> 'btn btn-primary', :method => 'get' } %></td>
        <td><%= button_to 'Edit', edit_dot_path(dot), { :class=> 'btn btn-default', :method => 'get' } %></td>
        <td><%= button_to 'Destroy', dot, :class=> 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
